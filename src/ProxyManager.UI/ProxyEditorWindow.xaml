<Window x:Class="ProxyManager.UI.ProxyEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор списка прокси" Height="450" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Таблица прокси -->
        <DataGrid x:Name="GridProxies" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Адрес (IP:Port)" Binding="{Binding Address}" Width="150"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки управления -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="BtnAdd" Content="Добавить" Width="80" Height="25" Click="BtnAdd_Click"/>
            <Button x:Name="BtnDelete" Content="Удалить" Width="80" Height="25" Margin="5,0,0,0" Grid.Column="1" Click="BtnDelete_Click"/>

            <Button x:Name="BtnSave" Content="Сохранить и Закрыть" Width="140" Height="25" Margin="0,0,5,0" Grid.Column="3" FontWeight="Bold" Click="BtnSave_Click"/>
            <Button x:Name="BtnCancel" Content="Отмена" Width="80" Height="25" Grid.Column="4" Click="BtnCancel_Click"/>
        </Grid>
    </Grid>
</Window>
